			</if>
			<if test="create_date != null">
				CREATE_DATE,
			</if>
			<if test="updateBy.id != null">
				UPDATE_BY,
			</if>
			<if test="update_date != null">
				UPDATE_DATE,
			</if>
			<if test="remarks != null">
				REMARKS,
			</if>
			<if test="del_flag != null">
				DEL_FLAG,
			</if>
			<if test="start_time != null">
				START_TIME,
			</if>
			<if test="start_time != null">
				START_TIME,
			</if>
			<if test="end_time != null">
				END_TIME,
			</if>
			<if test="officeRoom.id !=null">
				OFFICEROOM_ID,
			</if>
			<if test="hoster.id !=null">
				hoster,
			</if>
			<if test="meetReady !=null">
				MEETREADY,
			</if>
		</trim>
		<trim prefix="values (" suffix=")" suffixOverrides=",">
			<if test="id != null">
				#{id},
			</if>
			<if test="type != null">
				#{type},
			</if>
			<if test="title != null">
				#{title},
			</if>
			<if test="content != null">
				#{content},
			</if>
			<if test="files != null">
				#{files},
			</if>
			<if test="status != null">
				#{status},
			</if>
			<if test="createBy.id != null">
				#{createBy.id},
			</if>
			<if test="createDate != null">
				#{createDate},
			</if>
			<if test="updateBy.id != null">
				#{updateBy.id},
			</if>
			<if test="updateDate != null">
				#{updateDate},
			</if>
			<if test="remarks != null">
				#{remarks},
			</if>
			<if test="delFlag != null">
				#{delFlag},
			</if>
			<if test="startTime != null">
				#{startTime},
			</if>
			<if test="endTime != null">
				#{endTime},
			</if>
			<if test="officeRoom.id !=null">
				#{officeRoom},
			</if>
			<if test="hoster.id !=null">
				#{hoster.id},
			</if>
			<if test="meetReady !=null">
				#{meetReady},
			</if>
		</trim>
	</insert>
	<insert id="insert" parameterType="OaNotifyMeeting">
		INSERT INTO oa_notify_meeting(
		id,
		type,
		title,
		content,
		files,
		status,
		create_by,
		create_date,
		update_by,
		update_date,
		remarks,
		del_flag,
		start_time,
		end_time,
		OFFICEROOM_ID,
		hoster,
		MEETREADY
		) VALUES (
		#{id},
		#{type},
		#{title},
		#{content},
		#{files},
		#{status},
		#{createBy.id},
		#{createDate},
		#{updateBy.id},
		#{updateDate},
		#{remarks},
		#{delFlag},
		#{startTime},
		#{endTime},
		#{officeRoom.id},
		#{hoster.id},
		#{meetReady}
		)
	</insert>


	<update id="update">
		UPDATE oa_notify_meeting SET
		type = #{type},
		title = #{title},
		content = #{content},
		files = #{files},
		status = #{status},
		update_by = #{updateBy.id},
		update_date = #{updateDate},
		remarks = #{remarks},
		start_time = #{startTime},
		end_time = #{endTime},
		OFFICEROOM_ID=#{officeRoom.id},
		hoster=#{hoster.id},
		MEETREADY=#{meetReady}
		WHERE id = #{id}
	</update>

	<update id="delete">
		UPDATE oa_notify_meeting SET
		del_flag = #{DEL_FLAG_DELETE}
		WHERE id = #{id}
	</update>

</mapper>