<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.thinkgem.jeesite.modules.oa.dao.OaNotifyMeetingDao">

	<sql id="oaNotifyMeetingColumns">
		a.id AS "id",
		a.type AS "type",
		a.title AS "title",
		a.content
		AS "content",
		a.files AS "files",
		a.status AS "status",
		a.create_by AS
		"createBy.id",
		a.create_date AS "createDate",
		a.update_by AS
		"updateBy.id",
		a.update_date AS "updateDate",
		a.remarks AS "remarks",
		a.del_flag AS "delFlag",
		a.start_time AS "startTime",
		a.end_time AS
		"endTime",
		b.read_num,
		b.un_read_num,
		u.name as "userName",
		o.name as "createBy.office.name",
		s.name as
		"createBy.name",
		a.OFFICEROOM_ID as "officeRoom.id",
		f.office_room_name as "officeRoom.officeRoomName",
		a.MEETREADY as  "meetReady",
		a.hoster as "hoster.id",
		uu.name as "hoster.name"
	</sql>

	<sql id="oaNotifyMeetingJoins">
		<!-- 查询已读和未读 -->
		LEFT JOIN(
		SELECT r.meeting_id,
		sum(case when r.read_flag = '1' then 1 else 0 end) read_num,
		sum(case when r.read_flag != '1' then 1 else 0 end) un_read_num
		FROM oa_notify_meetting_accept r GROUP BY r.meeting_id
		)b ON b.meeting_id = a.id
		LEFT JOIN sys_user u ON a.create_by=u.id
		LEFT JOIN sys_office o ON o.id = u.office_id
		LEFT JOIN sys_user s on s.id=a.create_by
		LEFT JOIN sys_user uu on uu.id=a.hoster
		LEFT JOIN oa_officeroom f on f.id=a.OFFICEROOM_ID
	</sql>
	<sql id="basiColumns"> id </sql>

	<select id="get" resultType="OaNotifyMeeting">
		SELECT
		<include refid="oaNotifyMeetingColumns" />
		FROM oa_notify_meeting a
		<include refid="oaNotifyMeetingJoins" />
		WHERE a.id = #{id}
	</select>

	<select id="findList" resultType="OaNotifyMeeting">
		SELECT
		<include refid="oaNotifyMeetingColumns" />
		<if test="isSelf">,
			r.read_flag
		</if>
		FROM oa_notify_meeting a
		<include refid="oaNotifyMeetingJoins" />

		<!-- 我的预约会议 -->
		<if test="isSelf">
			JOIN oa_notify_meetting_accept r ON r.meeting_id = a.id
			AND r.user_id = #{currentUser.id}
		</if>
		where
		a.del_flag = #{DEL_FLAG_NORMAL}
		<if test="title != null and title != ''">
			AND a.title LIKE
			<if test="dbName == 'oracle'">'%'||#{title}||'%'</if>
			<if test="dbName == 'mssql'">'%'+#{title}+'%'</if>
			<if test="dbName == 'mysql'">concat('%',#{title},'%')</if>
		</if>
		<if test="type != null and type != ''">
			AND a.TYPE = #{type}
		</if>
		<if test="status != null and status != ''">
			AND a.STATUS = #{status}
		</if>
		<if test="isSelf">
			AND a.STATUS = '1'
		</if>
		<if test="isSelf==false">
			AND a.create_by=#{currentUser.id}
		</if>
		<if test="startTime !=null and startTime !=''">
			and a.start_time <![CDATA[  >=  ]]>
			#{startTime}
		</if>
		<if test="endTime !=null and endTime !=''">
			and a.end_time<![CDATA[   <=  ]]>
			#{endTime}
		</if>
		${sqlMap.dsf}
		<choose>
			<when test="page !=null and page.orderBy != null and page.orderBy != ''">
				ORDER BY ${page.orderBy}
			</when>
			<otherwise>
				ORDER BY a.update_date DESC
			</otherwise>
		</choose>
	</select>

	<!-- 未读 -->
	<select id="findNoRead" resultType="OaNotifyMeeting">
		SELECT
		<include refid="oaNotifyMeetingColumns" />
		<if test="isSelf">,
			r.read_flag
		</if>
		FROM oa_notify_meeting a
		<include refid="oaNotifyMeetingJoins" />

		<!-- 我的预约会议 -->
		<if test="isSelf">
			JOIN oa_notify_meetting_accept r ON r.meeting_id = a.id
			AND r.user_id = #{currentUser.id}
			AND r.read_flag ='0'
		</if>
		where
		a.del_flag = #{DEL_FLAG_NORMAL}
		<if test="title != null and title != ''">
			AND a.title LIKE
			<if test="dbName == 'oracle'">'%'||#{title}||'%'</if>
			<if test="dbName == 'mssql'">'%'+#{title}+'%'</if>
			<if test="dbName == 'mysql'">concat('%',#{title},'%')</if>
		</if>
		<if test="type != null and type != ''">
			AND a.TYPE = #{type}
		</if>
		<if test="status != null and status != ''">
			AND a.STATUS = #{status}
		</if>
		<if test="isSelf">
			AND a.STATUS = '1'
		</if>
		<if test="isSelf==false">
			AND a.create_by=#{currentUser.id}
		</if>
		<if test="startTime !=null and startTime !=''">
			and a.start_time <![CDATA[  >=  ]]>
			#{startTime}
		</if>
		<if test="endTime !=null and endTime !=''">
			and a.end_time<![CDATA[   <=  ]]>
			#{endTime}
		</if>
		${sqlMap.dsf}
		<choose>
			<when test="page !=null and page.orderBy != null and page.orderBy != ''">
				ORDER BY ${page.orderBy}
			</when>
			<otherwise>
				ORDER BY a.update_date DESC
			</otherwise>
		</choose>
	</select>

	<select id="findAllList" resultType="OaNotifyMeeting">
		SELECT
		<include refid="oaNotifyMeetingColumns" />
		FROM oa_notify_meeting a
		<include refid="oaNotifyMeetingJoins" />
		<where>
			a.del_flag = #{DEL_FLAG_NORMAL}
		</where>
		<choose>
			<when test="page !=null and page.orderBy != null and page.orderBy != ''">
				ORDER BY ${page.orderBy}
			</when>
			<otherwise>
				ORDER BY a.update_date DESC
			</otherwise>
		</choose>
	</select>


	<select id="findCount" resultType="Long">
		SELECT
		count(1)
		FROM oa_notify_meeting a
		<if test="isSelf">
			JOIN oa_notify_meetting_accept r ON r.meeting_id = a.id AND r.user_id
			= #{currentUser.id}
			<if test="readFlag != null and readFlag != ''">
				AND r.read_flag = #{readFlag}
			</if>
		</if>
		WHERE a.del_flag = #{DEL_FLAG_NORMAL}
		<if test="isSelf">
			AND a.STATUS = '1'
		</if>
	</select>
	<select id="findMeetingId" resultType="OaNotifyMeeting">
		SELECT
		<include refid="basiColumns" />
		FROM oa_notify_meeting
	</select>

	<insert id="insertWithExcel" parameterType="OaNotifyMeeting">
