			systemService.updateEmailById(user.getId(), null, email);
			flag = "0";
			message = "修改邮箱成功";
			return new JsonResult(flag, message, null);
		} else {
			message = "修改邮箱失败";
			return new JsonResult(flag, message, null);
		}
	}

