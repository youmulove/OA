.main .m__article .m__ar__list li .form--title  {
  float: left;
  width: 120px;
  margin-right: 20px;
}
/* 2017-10-12 新加 抵消框架内css效果 */
.main .m__article .m__ar__list li label{
	display:inline;
}
.main .m__article .m__ar__list li label.form--star:before {
  content: "*";
  display: inline-block;
  margin-right: 4px;
  font-family: SimSun;
  font-size: 12px;
  color: #f04134;
}
.main .m__article .m__ar__list li .form--file {
  border: 1px solid #ccc;
}
.main .m__article .m__ar__list li select,
.main .m__article .m__ar__list li input[type="text"] {
  width: 310px;
  height:auto;
  padding: 6px 12px;
  line-height: 1.42857143;
  border: 1px solid #ccc;
  border-radius: 4px;
  font-size: 14px;
  background-color: #fff;
  color: #555;
  -webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075);
  box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075);
  -webkit-transition: border-color ease-in-out 0.15s, -webkit-box-shadow ease-in-out 0.15s;
  -o-transition: border-color ease-in-out 0.15s, box-shadow ease-in-out 0.15s;
  transition: border-color ease-in-out 0.15s, box-shadow ease-in-out 0.15s;
}
.main .m__article .m__ar__list li select:focus,
.main .m__article .m__ar__list li input[type="text"]:focus {
  border-color: #66afe9;
  outline: 0;
  -webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075), 0 0 8px rgba(102, 175, 233, 0.6);
  box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075), 0 0 8px rgba(102, 175, 233, 0.6);
}
.main .m__article .m__ar__list li textarea {
  margin-top: 10px;
  padding: 5px;
  width: 310px;
  font-size: 15px;
  border: 1px solid #ccc;
  border-radius: 4px;
  color: #555;
  -webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075);
  box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075);
  -webkit-transition: border-color ease-in-out 0.15s, -webkit-box-shadow ease-in-out 0.15s;
  -o-transition: border-color ease-in-out 0.15s, box-shadow ease-in-out 0.15s;
  transition: border-color ease-in-out 0.15s, box-shadow ease-in-out 0.15s;
}
.main .m__article .m__ar__list li textarea:focus {
  border-color: #66afe9;
  outline: 0;
  -webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075), 0 0 8px rgba(102, 175, 233, 0.6);
  box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075), 0 0 8px rgba(102, 175, 233, 0.6);
}
.main .m__article .home__list {
  display: flex;
  width: 100%;
  padding: 0 20px;
}
.main .m__article .home__list li {
  margin-bottom: 40px;
  /*border:1px solid #ccc;*/
}
.main .m__article .home__list .home--title {
  float: left;
  height: 80px;
  padding: 0 30px;
  margin-right: 50px;
  border-right: 1px solid #ccc;
  text-align: center;
}
.main .m__article .home__list .home--title img {
  display: block;
  width: 50px;
  height: 50px;
}
.main .m__article .home__list .home--content {
  float: left;
  height: 80px;
  line-height: 20px;
  overflow: auto;
}
.main .m__article .home__list .home--content p {
  width: 100%;
  height: 20px;
}
.main .m__article .home__list .home--content span {
  float: left;
  width: 100px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 14px;
}
.main .m__article .home__list .home--content span:nth-child(3) {
  width: 150px;
}
.main .m__article .m--btn {
  height: 32px;
  width: 90px;
  margin-top: 20px;
  border: 1px solid #38adff;
  border-radius: 4px;
  font-size: 14px;
  color: #fff;
  background-color: #38adff;
  outline: none;
  cursor: pointer;
}
