* {
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
}
blockquote,
body,
button,
dd,
dl,
dt,
fieldset,
form,
h1,
h2,
h3,
h4,
h5,
h6,
hr,
input,
legend,
li,
ol,
p,
pre,
td,
textarea,
th,
ul {
  margin: 0;
  padding: 0;
}
article,
aside,
details,
figcaption,
figure,
footer,
header,
hgroup,
main,
nav,
section,
summary {
  display: block;
}
body {
  font-family: Helvetica Neue, Helvetica, Hiragino Sans GB, Microsoft Yahei, Heiti SC, WenQuanYi Micro Hei, Arial, sans-serif;
  min-width: 1080px;
  font-size: 14px;
  line-height: 1.42857143;
}
body,
html {
  color: #333;
  background: #e7e8eb;
}
ul,
ol {
  list-style: none;
}
a {
  color: #676a6d;
  text-decoration: none;
}
img {
  vertical-align: middle;
}
.width--1080 {
  width: 1080px;
  margin: 0 auto;
}
.lf {
  float: left;
}
.rt {
  float: right;
}
.clearfix:before {
  content: "";
  display: table;
}
.clearfix:after {
  content: "";
  display: table;
  clear: both;
}
.margin:before {
  content: "";
  display: table;
}
/*头部样式*/
.header {
  height: 62px;
  font-size: 16px;
  background-color: #fdfdfd;
}
.header .h__wrap {
  height: 100%;
}
.header .logo {
  float: left;
  height: 62px;
  line-height: 62px;
  text-align: left;
  margin-right: 40px;
  cursor: pointer;
}
.header .logo > img {
  height: 32px;
  width: 32px;
}
.header .logo > span {
  display: inline-block;
  text-align: inherit;
  padding-left: 10px;
  width: 154px;
  /*overflow: hidden;
      text-overflow: ellipsis;
      white-space: nowrap;*/
}
.popup {
  /*弹窗样式*/
  position: relative;
  width: 100%;
  height: 100%;
}
.popup .p__content {
  width: 100%;
  height: 100%;
  padding: 0 25px 70px 25px;
  overflow: auto;
}
.popup .p__content .p__header {
  height: 38px;
  line-height: 38px;
  padding-left: 26px;
  background-color: #e9e9e9;
  font-size: 16px;
}
.popup .p__content .form-group {
  width: 100%;
}
.popup .p__content .form-group .form-list {
  display: flex;
  margin: 15px 0;
  font-size: 14px;
  color: #333;
}
.popup .p__content .form-group .form-list > label {
  /*因为设置页面"添加子管理员弹窗"，所以将其改为子选择器*/
  float: left;
  width: 30%;
  height: 34px;
  line-height: 34px;
  padding: 0 15px;
  text-align: right;
}
.popup .p__content .form-group .form-list > label span {
  color: red;
  margin-left: 3px;
}
.popup .p__content .form-group .form-list .form--xuanze {
  /*设置页面弹框单选框样式*/
}
.popup .p__content .form-group .form-list .form--xuanze li {
  height: 25px;
  margin-top: 10px;
  line-height: 25px;
}
.popup .p__content .form-group .form-list .form--input {
  float: left;
  position: relative;
  width: 70%;
}
.popup .p__content .form-group .form-list .form--input > input,
.popup .p__content .form-group .form-list .form--input > select {
  /*因为设置页面"添加子管理员弹窗"，所以将其改为子选择器*/
  width: 60%;
  height: 34px;
  padding: 6px 12px;
  line-height: 1.42857143;
  border: 1px solid #ccc;
  border-radius: 4px;
  font-size: 14px;
  background-color: #fff;
  color: #555;
  outline: 0;
  -webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075);
  box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075);
  -webkit-transition: border-color ease-in-out 0.15s, -webkit-box-shadow ease-in-out 0.15s;
  -o-transition: border-color ease-in-out 0.15s, box-shadow ease-in-out 0.15s;
  transition: border-color ease-in-out 0.15s, box-shadow ease-in-out 0.15s;
}
.popup .p__content .form-group .form-list .form--input > input:focus,
.popup .p__content .form-group .form-list .form--input > select:focus {
  border-color: #66afe9;
  -webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075), 0 0 8px rgba(102, 175, 233, 0.6);
  box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075), 0 0 8px rgba(102, 175, 233, 0.6);
}
.popup .p__btn {
 /*  position: absolute; */
  position: fixed;
  left: 0;
  bottom: 0;
  height: 70px;
  line-height: 70px;
  width: 100%;
  border-top: 1px solid #eee;
  background-color: #fff;
  text-align: center;
  -webkit-box-shadow: inset 0 1px 1px #ddd, 0 0 8px #ddd;
  box-shadow: inset 0 1px 1px #ddd, 0 0 8px #ddd;
}
.popup .p__btn button {
  padding: 5px 20px;
  margin: 0 10px;
  border: 1px solid #aaa;
  border-radius: 3px;
  background-color: #fff;
  outline: none;
  cursor: pointer;
}
.popup .p__btn button:hover {
  /*添加子部门 结束*/
  border-color: #38adff;
}
